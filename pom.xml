<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.benjaminborbe</groupId>
	<artifactId>de.benjaminborbe.parent</artifactId>
	<name>Benjamin Borbe - Parent</name>
	<description>Benjamin Borbe - Parent</description>
	<version>0.0.1</version>
	<packaging>pom</packaging>
	<properties>
		<!-- Print unit test results into files instead of console -->
		<unitTestUseFile>true</unitTestUseFile>
		<!-- tell the compiler it should use 1.6 -->
		<maven.compiler.source>1.6</maven.compiler.source>
		<maven.compiler.target>1.6</maven.compiler.target>
		<!-- Sourcefiles UTF-8 -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- OSGI-Test includes -->
		<felix_plugin_imports>*;resolution:=optional,org.w3c.dom,javax.xml.transform,javax.xml.transform.dom,javax.xml.transform.stream,com.mysql.jdbc,com.sun.mail,com.sun.mail.handlers,com.sun.mail.iap,com.sun.mail.imap,com.sun.mail.imap.protocol,com.sun.mail.mbox,com.sun.mail.pop3,com.sun.mail.smtp,com.sun.mail.util,javax.mail,javax.mail.event,javax.mail.internet,javax.mail.search,javax.mail.util,com.sun.activation,com.sun.activation.registries,com.sun.activation.viewers,javax.activation</felix_plugin_imports>
		<felix_plugin_junit>javax.servlet;javax.servlet.http;version=2.5,org.osgi.service.http;version=1.2,com.mysql.jdbc;version=5.1.17,com.sun.mail,com.sun.mail.handlers,com.sun.mail.iap,com.sun.mail.imap,com.sun.mail.imap.protocol,com.sun.mail.mbox,com.sun.mail.pop3,com.sun.mail.smtp,com.sun.mail.util,javax.mail,javax.mail.event,javax.mail.internet,javax.mail.search,javax.mail.util,com.sun.activation,com.sun.activation.registries,com.sun.activation.viewers,javax.activation</felix_plugin_junit>
		<!-- Versions -->
		<felix.version>3.0.1</felix.version>
		<felix.version.http>2.0.4</felix.version.http>
		<felix.plugin.version>2.0.1</felix.plugin.version>
		<mysql.version>5.1.17</mysql.version>
		<servlet-api.version>2.5</servlet-api.version>
		<guice.version>3.0</guice.version>
		<peaberry.version>1.2</peaberry.version>
		<slf4j.version>1.5.6</slf4j.version>
		<log4j.version>1.2.14</log4j.version>
		<slf4j.impl>slf4j-log4j12</slf4j.impl>
		<gwt.version>2.4.0</gwt.version>
                <gwt-log.version>3.1.6</gwt-log.version>
		<easymock.version>3.0</easymock.version>
		<commons-logging.version>1.1.1</commons-logging.version>
		<commons.collections.version>3.2.1</commons.collections.version>
	</properties>
	<modules>
		<module>bridge</module>
		<module>tools</module>
		<module>tools_osgi</module>
		<module>index</module>
		<module>index_test</module>
		<module>timetracker</module>
		<module>timetracker_test</module>
		<module>gwt</module>
		<module>cron</module>
		<module>cron_test</module>
		<module>monitoring</module>
		<module>monitoring_test</module>
		<module>mail</module>
		<module>mail_test</module>
		<module>storage</module>
		<module>storage_test</module>
	</modules>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<includes>
					<include>**/*.*</include>
				</includes>
			</testResource>
		</testResources>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.3.2</version>
					<!-- best lock down version of the plugin too -->
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.4.3</version>
					<configuration>
						<excludes>
							<exclude>**/Test*.java</exclude>
							<exclude>**/*Mock.java</exclude>
						</excludes>
						<useFile>false</useFile>
						<!-- set to false in order to get the output on the console -->
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.7</version>
		</dependency>
	</dependencies>
</project>
